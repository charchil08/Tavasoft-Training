@model IEnumerable<Category>;

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-sm-6">
            <h2>Category List</h2>
        </div>
        <div class="col-sm-6 text-end">
            <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create" >
                <i class="bi bi-plus-circle"></i>
                Create New Category</a>
        </div>
    </div>
</div>

<table class="table mt-4 table-bordered table-striped border-light w-100" >
    <thead class="my-4">
        <tr class="">
            <th class="h4 text-info">Category Name</th>
            <th class="h4 text-info">Display order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in  Model)
       {
           <tr class="pt-4">
               <td class="w-50 align-middle">
                   @item.Name
               </td>
                <td class="w-25 align-middle">
                    @item.DisplayOrder
               </td>
               <td class="w-25">
                   <div class="btn btn-outline-info px-4 py-1" role="group" >
                       <a style="text-decoration:none;" asp-controller="Category"  asp-action="Edit" asp-route-id=@item.Id class="text-light"  >
                       <i class="bi bi-pencil-square px-1"></i>Edit 
                   </a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>