<div class="container-fluid container-lg">
    <div class="row border-bottom" style="min-height:78px">
        <div class="col-lg-6 col-11 d-flex align-items-center py-sm-2 py-lg-0">
            <img src="~/assets/search.png"
                 class="align-content-center my-auto"
                 width="21px"
                 height="21px" />
            <input type="search"
                   name=""
                   placeholder="Search mission ..."
                   id=""
                   class="px-4 w-50"
                   style="border: none; outline: none" />
        </div>
        <button data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasResponsive"
                aria-controls="offcanvasResponsive"
                class="d-lg-none col-1 d-flex justify-content-end align-items-center btn-primary btn-light bg-transparent border-0">
            <img src="~/assets/filter.png" alt="filter" />
        </button>

        <div class="offcanvas-lg offcanvas-end col-lg-6 resolve_outline"
             tabindex="-1"
             id="offcanvasResponsive"
             aria-labelledby="offcanvasResponsiveLabel">
            <div class="offcanvas-header">
                <button class="btn-primary bg-transparent border-0 outline-0"
                        type="button"
                        data-bs-dismiss="offcanvas"
                        data-bs-target="#offcanvasResponsive"
                        aria-label="Close">
                    <img src="~/assets/left.png" alt="close" />
                </button>
                <a href="#" class="text-dark">clear all</a>
            </div>
            <div class="offcanvas-body filter_container h-100">
                <div class="d-lg-flex row d-flex align-items-center g-lg-0 g-2 w-100">
                    <div class="col-lg-3 h-100 filter_item">
                        <select class="form-select hide_border_select h-100"
                                aria-label="country"
                                asp-items="@Model.CountryList"
                                id="selectCountryFilter">
                            <option disabled selected>-- Country --</option>

                        </select>
                    </div>
                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        @*City*@
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center dropdown-toggle hide_dropdown_arrow hide_border_select h-100"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown"
                                 aria-expanded="false">
                                City
                            </div>
                            <ul class="dropdown-menu w-100 scroll_dropdown"
                                aria-labelledby="dropdownMenuButton1"
                                id="filteredCityList">
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        @*Theme*@
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center dropdown-toggle hide_dropdown_arrow hide_border_select h-100"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown"
                                 aria-expanded="false">
                                Theme
                            </div>
                            <ul class="dropdown-menu w-100 scroll_dropdown"
                            id="themeListFilter"
                                aria-labelledby="dropdownMenuButton1">
                                @foreach (var theme in @Model.MissionThemesList)
                                {
                                    var checkBoxId = theme.MissionThemeId;
                                    var liId = "li" + theme.Title;
                                    <li id="@liId">
                                        <div class="form-check dropdown-item px-4">
                                            <input class="form-check-input mx-auto"
                                               type="checkbox"
                                               id="@checkBoxId" />
                                            <label class="form-check-label ps-2" for="@theme.Title">
                                                @theme.Title
                                            </label>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        @*Skill*@
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center dropdown-toggle hide_dropdown_arrow hide_border_select h-100"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown"
                                 aria-expanded="false">
                                Skill
                            </div>
                            <ul class="dropdown-menu w-100 scroll_dropdown"
                                id="skillListFilter"
                                aria-labelledby="dropdownMenuButton1">
                                @foreach (var skill in @Model.SkillsList)
                                {
                                    var checkBoxId = skill.SkillId;
                                    var liId = "li" + skill.SkillName;
                                    <li id="@liId">
                                        <div class="form-check dropdown-item px-4">
                                            <input class="form-check-input mx-auto"
                                               type="checkbox"
                                               id="@checkBoxId" />
                                            <label class="form-check-label ps-2" for="@skill.SkillName">
                                                @skill.SkillName
                                            </label>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
