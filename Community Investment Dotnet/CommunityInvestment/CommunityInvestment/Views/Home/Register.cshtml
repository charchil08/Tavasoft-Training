              <label for="exampleInputPassword1" class="form-label"
                >Password</label
              >
              <input
                type="password"
                class="form-control custom_input"
                id="exampleInputPassword1"
                placeholder="********"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label"
                >Confirm Password</label
              >
              <input
                type="password"
                class="form-control custom_input"
                id="exampleInputPassword1"
                placeholder="********"
              />
            </div>

